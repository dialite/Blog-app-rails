<header>
  <h4>Add comment</h4>
</header>

<div>
  <%= form_with url:user_post_comments_path(@post.author.id, @post.id), method: :post, local: true do |form| %>
    <%= form.text_area :text, size: "80x4", placeholder: "Type comments here", required: true %>
    <%= form.submit "Reply", disable_with: "Submitting comment..." %>
  <% end %>
</div>