<header>
  <h4>Add comment</h4>
</header>

<div>
  <%= form_with model: @comment, url:user_post_comments_path(user_id: @post.author.id, post_id: @post.id), method: :post, local: true do |form| %>
    <%= form.hidden_field :author_id, value: @post.author.id %>
    <%= form.hidden_field :post_id, value: @post.id %>
    <%= form.text_area :text, size: "80x4", placeholder: "Type comments here", required: true %>
    <%= form.submit "Add Comment", disable_with: "Submitting comment..." %>
  <% end %>
</div>